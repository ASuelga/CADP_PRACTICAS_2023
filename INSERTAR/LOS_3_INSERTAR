INSERTAR ORDENADO
...
procedure insertarOrdenado(var l:lista; dato:integer); 
var 
    ant,act,nue:lista;
begin
    new(nue);
    nue^.dato:=dato;
    act:=l;
    ant:=l;
    while(act<>nil) and (act^.dato<dato) do begin
        ant:=act;
        act:=act^.sig;
    end;
    if(ant=act) then
        l:=nue
    else
        ant^.sig:=nue;
    nue^.sig:=act;
end;
