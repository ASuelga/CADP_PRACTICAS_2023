INSERTAR ATRAS

procedure insertarAtras(var l:lista; dato:integer);
var
    nue,act:lista;
begin
    new(nue);
    nue^.dato:=dato;
    nue^.sig:=nil;
    if(l=nil) then
        l:=nue
    else begin
        act^.sig:=nue;
    end;
    ult:=nue;
end;

///////////////////////////////////////////////////////////////////////////////////////
INSERTAR ADELANTE

procedure insertarAdelante(var l:lista; dato:integer);
var
    nue:lista;
begin
    new(nue);
    nue^.dato:=dato;
    nue^.sig:=l;
    l:=nue;
end;
